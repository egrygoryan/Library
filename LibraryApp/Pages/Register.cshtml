@page
@model LibraryApp.Pages.RegisterModel

@{
	<h1>Register</h1>
	<h4>UserRegistrationModel</h4>
	<hr />
	<div class="row">
		<div class="col-md-4">
			<form method="post" autocomplete="off">
				<div asp-validation-summary=All class="alert-danger"></div>
				<div class="text-danger"></div>
				<div class="form-group">
					<label class="control-label">Username</label>
					<input asp-for=UserModel.UserName class="form-control" autocomplete="off"/>
					<span asp-validation-for=UserModel.UserName class="text-danger"></span>
				</div>
				<br>
				<div class="form-group">
					<label class="control-label">Email</label>
					<input asp-for=UserModel.Email class="form-control"/>
					<span asp-validation-for=UserModel.Email class="text-danger"></span>
				</div>
				<br>
				<div class="form-group">
					<label class="control-label">Password</label>
					<input type = "password" asp-for=UserModel.Password class="form-control" />
					<span  asp-validation-for=UserModel.Password class="text-danger"></span>
				</div>
				<br>
				<div class="form-group">
					<label class="control-label">Confirm Password</label>
					<input type = "password" asp-for=UserModel.ConfirmPassword class="form-control"/>
					<span asp-validation-for=UserModel.ConfirmPassword class="text-danger"></span>
				</div>
				<br>
				<div class="form-group">
					<input type="submit" class="btn btn-primary" />
				</div>
			</form>
		</div>
	</div>
	@section scripts{
		<partial name="_ValidationScriptsPartial" />
	}
}
