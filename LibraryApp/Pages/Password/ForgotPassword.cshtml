@page
@model LibraryApp.Pages.Password.ForgotPasswordModel
@{
	<h1>ForgotPassword</h1>
	<hr />
	<div class="row">
		<div class="col-md-4">
			<form method="post">
				<div asp-validation-summary=All class="alert-danger"></div>
				<div class="form-group">
					<label class="control-label">Email</label>
					<input type ="email" asp-for=ForgotPassword.Email class="form-control" autocomplete="off" />
					<span asp-validation-for=ForgotPassword.Email class="text-danger"></span>
				</div>
				<br>
				<div class="form-group">
					<input type="submit" value="Re-sign password" class="btn btn-primary" />
				</div>
			</form>
		</div>
	</div>
	@section scripts{
		<partial name="_ValidationScriptsPartial" />
	}
}
