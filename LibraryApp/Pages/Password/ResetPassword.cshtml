@page
@model LibraryApp.Pages.Password.ResetPasswordModel
@{
	<h1>ResetPassword</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="ResetPassword">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Enter new password</label>
                <input asp-for=ResetPassword.Password class="form-control" />
                <span asp-validation-for=ResetPassword.Password class="text-danger"></span>
            </div>
            <br>
            <div class="form-group">
                <label class="control-label">Confirm entered password</label>
                <input asp-for=ResetPassword.ConfirmPassword class="form-control" />
                <span asp-validation-for=ResetPassword.ConfirmPassword class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="ResetPassword.Email" class="form-control" />
            <input type="hidden" asp-for="ResetPassword.Token" class="form-control" />
            <br>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
@section scripts{
		<partial name="_ValidationScriptsPartial" />
	}
}
